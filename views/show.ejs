<%- include("partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">
		<%= blog.title %>
	</div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui circular centered image" src="<%= blog.image %>">
			<span><%= blog.created.toDateString() %></span>
		</div>
		<p>
			<%= blog.body %>
		</p>
		<p>
			<em>Submitted By<a href="/users/<%= blog.author.id %>"> <%= blog.author.username %></a></em>
		</p>
	</div>
	<% if(currentUser && blog.author.id.equals(currentUser._id)||currentUser&&currentUser.isAdmin){ %>
	<a class="ui orange basic button" href="/blogs/<%= blog.id %>/edit">Edit blog</a>
	<form id="delete" action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
		<button class="ui red basic button">
			Delete Blog
		</button>
	</form>
	<% } %>
</div>
<%- include("partials/footer") %>